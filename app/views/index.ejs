<!DOCTYPE html>
<html lang="en" ng-app="RpiWifiConfig">

<head>
    <title>XeThru Wifi Config</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0 maximum-scale=1.0, user-scalable=1">
    <link rel="stylesheet" href="/external/font-awesome/css/font-awesome.min.css" >
    <link type="text/css" rel="stylesheet" href="/external/Materialize/dist/css/materialize.min.css"  media="screen,projection"/>
    <link rel="stylesheet" href="/app.css">
</head>

<body ng-controller = "AppController" ng-keyup      = "$event.keyCode == 27 ? change_selection(null) : ''">
<nav class="xethru z-depth-0"  role="navigation">
<div class="nav-wrapper container xethru">
  <div class="row">
      <div class="col s2"><i class = "fa fa-wifi"></i></div>
      <div class="col s7">Select a Wifi</div>
      <div class="col s1 xethru"> <div class="spin_container"><a href = "#rescan" ng-click = "rescan()" ng-class = "{ 'active': scan_running }">
            <i class = "fa fa-refresh"
               ng-class = "{ 'fa-spin': scan_running }"></i></a></div></div>
   </div>
</div>

</nav>
<div class="container">
<div class="col s12">
    <ul class="collapsible xethru_container z-depth-0" data-collapsible="expandable">
    <li ng-repeat = "cell in scan_results | orderBy:orderScanResults:true"
                 ng-class = "{ selected: (cell.mac === selected_cell.mac) }"
                 > <!--ng-click = "change_selection(cell)"-->
      <div class="collapsible-header">{{ cell.ssid }}</div>
      <div class="collapsible-body"><p>
        <div class="col s10 offset-s2">mac: {{ cell.mac }}</div>
        <div class="col s10 offset-s2"><input type = 'password' placeholder = 'Password' ng-model = 'passcode' /></div></p>
      </div>
    </li>
</div>
</div>
